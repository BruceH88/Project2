<!-- Page Content -->
<div id="page-content-wrapper">



  <div class="container mx-auto w-50 py-1 px-1 mt-4">
    <textarea id="postInput" rows="5" cols="80">

        </textarea>
      <form autocomplete="off">
        <div class="autocomplete" style="width:300px;">
          Topic: <input id="topicInput" type="text" name="Topic" placeholder="eg: Landscapes">
        </div>
        <input type="submit" class="postSubmit" value="Submit">
      </form>

  </div>

  <div class="container mx-auto w-50 py-1 px-1 mt-4">
    {{#each posts}}


    <div class=" text-center my-3 py-2 px-2 border border-secondary content-post rounded">

      <p class="text-left font-italic mb-1">{{#if Topic.topic}} -posted in <a href="/topics/{{Topic.id}}" class="topic-link">{{Topic.topic}}</a>{{/if}}</p>

      {{#if imgSrc}}
      <img src="{{imgSrc}}" alt="{{imgAlt}}" width="90%" class="">
      {{/if}}


      <p class="text-left py-2">{{body}}</p>

      <p class="text-right font-italic">

        {{#if User.userName}}-by <a href="/users/{{User.id}}">{{User.userName}}</a>{{/if}}

      <p class="text-right font-italic mb-1">{{createdAt}}</p>

    </div>

    {{/each}}
  </div>

</div>
<!-- /#page-content-wrapper -->